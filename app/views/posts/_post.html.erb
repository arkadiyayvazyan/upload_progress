<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>File:</strong>
    <% post.files.each do |file| %>
      <%= link_to file.filename, file, target: :blank %>
    <% end %>
  </p>
</div>
