<%= form_with(model: post, local: true, multipart: true ) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :files%> 
    <div data-controller="posts">
      <%= form.file_field :files, direct_upload: true, multiple: true, data: { target: "posts.input", action: "selected"}%>
      <progress data-posts-target="bar" max="100" value="0" style="display:none;"></progress>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
